extends layout

block content
  section.hero-text2
    .container
      .row  
        .col-lg-2
          img(src='/images/logo.jpg' height='75')
        .col-lg-9
          br
          h3.aligncenter Geo Kids - Learning by playing
          span.clear.spacer_responsive_hide_mobile
  br
  br
  main.container(role='main')
    .row
      .col-md-12
        br
        h1.aligncenter Continents
      for continent in continents
        .col-md-3.continent_ref
          h3.aligncenter=continent.continent
          a(href='/regions/'+continent.continent_id)
            img(src='/images/continent_'+continent.continent_id+'.png' class='img-thumbnail image_thumbnail')
          .middle
            .text-middle
              a(href='/regions/'+continent.continent_id) Show Regions
          
          
  
  br
  br
  br