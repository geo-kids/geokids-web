extends layout

block content
  section.hero-text
    .container
      .row  
        .col-lg-2
          img(src='/images/logo.jpg' height='200')
        .col-lg-9
          br
          br
          br
          h1.aligncenter Geo Kids - Learning by playing
          span.clear.spacer_responsive_hide_mobile
  br
  br
  main.container(role='main')
    .row
      .col-md-12
        h1.aligncenter Regions
        table.table.table-bordered.table-hover
          tr
            td ID
            td Continent
            td Regions
          for region in regions
            tr
              td= region.region_id
              td= region.continent
              td
                a(href='/countries/'+region.region_id) #{region.region}
  
  br
  br
  br