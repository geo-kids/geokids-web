extends layout

block content
  section.hero-text2
    .container
      .row  
        .col-lg-2
          img(src='/images/logo.jpg' height='75')
        .col-lg-9
          br
          h3.aligncenter Geo Kids - Learning by playing
          span.clear.spacer_responsive_hide_mobile
  br
  br
  main.container(role='main')
    .row
      .col-md-12
        br
      .col-md-2.continent_ref
        if info_continent!=null
          a(href='/continents')
            img(src='/images/continent_'+info_continent.continent_id+'.png' class='img-thumbnail' height="50px")
          .middle
            .text-middle
              a(href='/continents')|Return to continents
      .col-md-9
        br
        if info_continent!=null
          h1.aligncenter Regions of #{info_continent.continent}
        else
          h1.aligncenter All regions of the world
      .col-md-12
        hr
        br
      for region in regions
        .col-md-3.continent_ref
          h4.aligncenter=region.region
          a(href='/countries/'+region.region_id)
            img(src='/images/region_'+region.continent_id+'.png' class='img-thumbnail image_thumbnail')
          .middle
            .text-middle
              a(href='/countries/'+region.region_id) Show Countries
  
  br
  br
  br